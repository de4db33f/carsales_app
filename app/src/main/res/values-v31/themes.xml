<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Carsales" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_grey_100</item>
        <item name="colorPrimaryVariant">@color/blue_grey_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_200</item>
        <item name="colorSecondaryVariant">@color/indigo_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>